<p style="color: green"><%= notice %></p>

<h3>Subject: <%= @subject.name %> | Teacher: <%= @subject.teacher.name%></h3>

<% @subject.sections.each do |section| %>
  <h3>Section: <%= section.name %> | Room: <%= section.room %> | Time Slot: <%= section.time_slot %> | Number of Student: <%= section.number_of_students %></h3>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Program</th>
        <th>Year Level</th>
      </tr>
    </thead>
    <tbody>
      <% section.classlists.each do |classlist| %>
        <tr>
          <td><%= classlist.student.name %></td>
          <td><%= classlist.student.program %></td>
          <td><%= classlist.student.year_level %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>


<div>
  <%= link_to "Edit this subject", edit_subject_path(@subject) %> |
  <%= link_to "Back to subjects", subjects_path %>

  <%= button_to "Destroy this subject", @subject, method: :delete %>
</div>
