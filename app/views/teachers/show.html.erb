<p style="color: green"><%= notice %></p>


<h3>Teacher: <%= @teacher.name %> | Email: <%= @teacher.email %> | Specialization: <%= @teacher.specialization %> | Status: <%= @teacher.status %> | Number of Units: <%= @teacher.number_of_units%> | Monthly Salary: <%= @teacher.monthly_salary%></h3>
  <table>
    <thead>
      <tr>
        <th>Section Name</th>
        <th>Subject Name</th>
        <th>Room</th>
        <th>Time Slot</th>
      </tr>
    </thead>
    <tbody>
    <% @teacher.subjects.each do |subject| %>
    <% subject.sections. each do |section| %>
      <tr>
        <td><%= section.name %></td>
        <td><%= subject.name %></td>
        <td><%= section.room %></td>
        <td><%= section.time_slot %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
  </table>
 

<div>
  <%= link_to "Edit this teacher", edit_teacher_path(@teacher) %> |
  <%= link_to "Back to teachers", teachers_path %>

  <%= button_to "Destroy this teacher", @teacher, method: :delete %>
</div>
