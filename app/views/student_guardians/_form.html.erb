<style>
  .gold-placeholder::placeholder {
    color: #bfa300;
    font-style: italic;
    opacity: 0.8;
    letter-spacing: 0.5px;
  }

  .btn-round-gold, .btn-gxyy {
    background-color: #ffce1b;
    color: black;
    border: none;
    padding: 10px 25px;
    border-radius: 50px;
    font-size: 18px;
    font-weight: bold;
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    transition: 0.3s ease;
    text-decoration: none;
    display: inline-block;
  }

  .btn-round-gold:hover, .btn-gxyy:hover {
    background-color: black;
    color: #ffce1b;
    transform: scale(1.05);
  }

  .btn-des {
    background-color: #ff4747;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 30px;
    font-size: 18px;
    font-weight: bold;
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    transition: 0.3s ease;
  }

  .btn-des:hover {
    background-color: black;
    color: #ff4747;
    transform: scale(1.05);
  }

  .card {
    background-color: #000;
    color: #ffce1b;
    border: 2px solid #ffce1b;
    border-radius: 15px;
    margin-bottom: 30px;
    box-shadow: 0 4px 15px rgba(255, 206, 27, 0.2);
  }

  .card-header {
    background-color: black;
    color: #ffce1b;
    font-size: 22px;
    font-weight: 700;
    border-bottom: 2px solid #ffce1b;
    padding: 12px;
    text-align: center;
  }

  .card-body {
    padding: 20px;
  }

  .form-label {
    color: #ffce1b;
  }

  .form-control, .form-select {
    background-color: black;
    color: #ffce1b;
    border-color: #ffce1b;
  }
</style>

<div class="card shadow-sm">
  <div class="card-header text-center">
    <h4><%= student_guardian.new_record? ? "New Student Guardian" : "Edit Student Guardian" %></h4>
  </div>
  <div class="card-body">
    <%= form_with(model: student_guardian) do |f| %>
      
      <div class="mb-3">
        <%= f.label :student_id, "Student", class: "form-label fw-bold" %>
        <%= f.collection_select :student_id, Student.all, :id, :name, { prompt: "Select a student" }, { class: "form-select" } %>
      </div>

      <div class="mb-3">
        <%= f.label :guardian_id, "Guardian", class: "form-label fw-bold" %>
        <%= f.collection_select :guardian_id, Guardian.all, :id, :name, { prompt: "Select a guardian" }, { class: "form-select" } %>
      </div>

      <div class="mb-3">
        <%= f.label :relationship, class: "form-label fw-bold" %>
        <%= f.text_field :relationship, class: "form-control gold-placeholder", placeholder: "Enter relationship (e.g. Mother, Father)" %>
      </div>

      <div class="text-end">
        <%= f.submit student_guardian.new_record? ? "Create Student Guardian" : "Update Student Guardian", class: "btn-round-gold" %>
      </div>

    <% end %>
  </div>
</div>
