<!DOCTYPE html>
<html>
  <head>
    <title>Mynewapplication</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <!-- Bootstrap CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    >  
    
    <style>
  .navbar {
    background-color: #000000 !important;
  }

  .navbar-brand, .nav-link {
    font-size: 30px;         
    color: #f1f1f1 !important; 
    font-weight: 500;          
  }

  .nav-link:hover {
    color: #ffd700 !important; 
  }

  .sidebar {
  height: 100%;
  width: 250px;
  position: fixed;
  top 0;
  left: -250px;
  background-color: #111;
  color: white;
  transition: 0.3s;
  padding-top: 60px;
  z-index: 2000;
}

.sidebar a:hover {
        background-color: #575757;
      }

      .sidebar.active {
        left: 0;
      }

      .open-btn {
        font-size: 28px;
        border: none;
        background: none;
        color: #fff;
        cursor: pointer;
      }

      body.sidebar-open {
        overflow: hidden;
  }

  </style>
  </head>



  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
      <div class="container-fluid">
      <button class="open-btn" id="menuBtn">&#9776;</button>

        <a class="navbar-brand" href="#">School Manager</a>
        <div>
          <ul class="navbar-nav ms-auto">
            <li class="nav-item"><%= link_to "Students", students_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Teachers", teachers_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Sections", sections_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Departments", departments_path, class: "nav-link" %></li>
          </ul>
        </div>
      </div>
    </nav>  

    <div class="sidebar" id="sidebar">
      <a href="<%= students_path %>">Students</a>
      <a href="<%= teachers_path %>">Teachers</a>
      <a href="<%= sections_path %>">Sections</a>
      <a href="<%= departments_path %>">Departments</a>
    </div>

    <% flash.each do |key, message| %>
      <div class="alert alert-<%= key == "notice" ? "success" : "danger" %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <%= yield %>
    
    <!-- Bootstrap JS CDN (Optional for dropdowns, nav, etc.) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js">
    </script>
  </body>
</html>

