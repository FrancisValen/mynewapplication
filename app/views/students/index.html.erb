

<% content_for :title, "Students" %>

<h1>Student</h1>

<table class ="table table-light table-striped table-boarderless">
  <thead>
    <tr class = "table table-dark">
      <th>Name</th>
      <th>Year Level</th>
      <th>Program</th>
      <th>Department</th>
      <th>Number of Units</th>
      <th>Total Assessment</th>
      <th> </th>
      <th> </th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do | student | %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.year_level %></td>
        <td><%= student.program %></td>
        <td><%= student.department.name %></td>
        <td><%= student.number_of_units %></td>
        <td><%= student.total_assessment %></td>
        <td><%= link_to " Show this student ", student , class: "btn btn-outline-primary"%></td>
        <td><%= link_to " Edit this student ", edit_student_path(student), class: "btn btn-outline-secondary" %></td>
        <td><%= button_to "Destroy this student", student, method: :delete , class: "btn btn-outline-danger "%></td>


      </tr>
    <% end %>
  </tbody>
</table>

<p> </p>
<p> </p>
<p> </p>

<%= link_to "New student", new_student_path, class: "btn btn-outline-success"%>


